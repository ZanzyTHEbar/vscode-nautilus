{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": "src",
        "sourceMap": false,
        "strict": true,
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "ambient.d.ts",
    ],
    "files": [
        "src/extension.ts",
        "src/prefs.ts",
        "src/fileChooser.ts"
    ],
}