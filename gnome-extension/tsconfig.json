{
    "version": "1.0.0",
    "compileOnSave": true,
    "compilerOptions": {
        "strict": true,
        "lib": ["ES2022"],
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "src",
        "pretty": true,
        "removeComments": true,
        "incremental": true,
        "sourceMap": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["src/types/ambient.d.ts"],
    "files": ["src/extension.ts", "src/prefs.ts", "src/fileChooser.ts"]
}
